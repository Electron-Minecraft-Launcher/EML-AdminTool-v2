    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "../shared", 
    "../files"  
],
  "exclude": [
    "node_modules"
  ]
}